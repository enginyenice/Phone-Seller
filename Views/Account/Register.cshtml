@model TelefonSatis.Models.User

@{
    ViewData["Title"] = "Create";
}


    <div class="col-md-4 offset-md-4 my-4" style="padding-bottom:25%; padding-top:10%">
        @using (Html.BeginForm())
        {
            <div class="card shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <h3>
                                <span class="fa fa-sign-in fa-2x"></span>
                            </h3>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Kayıt</h2>
                            <small>Lütfen Formu Eksiksiz Doldurunuz.</small>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Uyari"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <strong>@TempData["Uyari"]</strong>
                        </div>
                    }
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>E-Mail</label>
                        @Html.TextBox("Mail", null, new { @class = "form-control" })
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Username: </label>
                        @Html.TextBox("Username", null, new { @class = "form-control" })
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        @Html.TextBox("Password", null, new { @class = "form-control" })
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-muted text-right">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-danger mr-2">Giriş Yap</a>
                    <input type="submit" value="Kayıt Ol" class="btn btn-outline-success mr-2" />
                </div>
            </div>
        }
        </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
