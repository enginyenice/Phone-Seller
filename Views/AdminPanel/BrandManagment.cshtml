@model IEnumerable<TelefonSatis.Models.Brand>
@{
    Layout = "~/Views/AdminPanel/_AdminLayout.cshtml";
    ViewData["Title"] = "BrandManagment";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Marka Yönetimi</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item">Yönetim Paneli</li>
                <li class="breadcrumb-item active">Marka Yönetimi</li>
            </ol>
            <div class="card mb-4">
                <div class="card-body">
                    @{

                        for (int i = 0; i < 180; i++)
                        {
                            <span>&nbsp;</span>
                        }
                    }
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table mr-1"></i>
                    Marka Kayıtları
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Marka ID</th>
                                    <th>Marka Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(i => item.BrandId)</td>
                                            <td>@Html.DisplayFor(i => item.BrandName)</td>
                                            <td>
                                                @Html.ActionLink("Düzenle", "Edit","Brands", new { id = item.BrandId }, new { @class = "btn btn-dark" })
                                                @Html.ActionLink("Detay", "Details", "Brands", new { id = item.BrandId }, new { @class = "btn btn-dark" })
                                                @Html.ActionLink("Sil", "Delete", "Brands", new { id = item.BrandId }, new { @class = "btn btn-dark" })
                                            </td>
                                        </tr>
                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="py-4 bg-light mt-auto">
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Copyright &copy; Your Website 2020</div>
                <div>
                    <a href="#">Privacy Policy</a>
                    &middot;
                    <a href="#">Terms &amp; Conditions</a>
                </div>
            </div>
        </div>
    </footer>
</div>