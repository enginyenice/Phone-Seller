@model IEnumerable<TelefonSatis.Models.Brand>
@using Microsoft.AspNetCore.Http.Extensions
@{
    ViewData["Title"] = "Products";
}

@{
    string data = Context.Request.GetEncodedUrl();

    string[] parcalar = data.Split("/");
    int selectId = Int32.Parse(parcalar[5]);

}


<div class="col-lg-3" style="padding-top: 3%;">

    <h4 class="my-4">&nbsp;&nbsp;Kategoriler</h4>
    <div class="list-group">
        <div class="form-group">
            <input type="search" class="form-control" id="SearchBar" aria-describedby="emailHelp" placeholder="Arama Yapın">
        </div>
        @foreach (var person in Model)
        {
            @if (person.BrandId == selectId)
            {
                <a href="#" class="list-group-item active">@person.BrandName</a>
            } else { 
            <a href="#" class="list-group-item">@person.BrandName</a>
            }
        }
    </div>
</div>



