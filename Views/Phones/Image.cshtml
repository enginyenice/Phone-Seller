@model TelefonSatis.Models.Phone

@{
    Layout = "~/Views/AdminPanel/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit";
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Kullanıcı Yönetimi</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item">Yönetim Paneli</li>
            <li class="breadcrumb-item active">Telefon Düzenle</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Telefon Kayıtları
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <h2>Telefon Düzenle</h2>

                    <hr />
                    <div class="row">
                        <div class="col-md-12">
                                @using (Html.BeginForm("Image", "Phones", FormMethod.Post,
                          new { enctype = "multipart/form-data" }))
                                {
                            <div class="form-group">
                                <div class="col-md-10">
                                    <p>Upload one or more files using this form:</p>
                                    <input type="file" name="ResimDosyasi" multiple />
                                </div>
                            </div>
                                <div class="form-group">
                                    <div class="col-md-10">
                                        
                                        <input type="hidden" name="PhoneId" asp-for="PhoneId" />
                                        <input type="submit" value="Upload" />
                                    </div>
                                </div>
                                }
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
